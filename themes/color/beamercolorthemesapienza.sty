\mode<presentation>

\definecolor{roma-university}{RGB}{131,32,51}
\definecolor{roma-major}{RGB}{37,69,87}
\definecolor{roma-department}{RGB}{0,89,99}

\setbeamercolor*{palette primary}{fg=white,bg=roma-university}
\setbeamercolor*{palette secondary}{fg=white,bg=roma-major}
\setbeamercolor*{palette tertiary}{fg=white,bg=roma-department}
\setbeamercolor*{palette quaternary}{fg=white,bg=white}

\setbeamercolor*{titlelike}{bg=roma-university}
\setbeamercolor*{frametitle}{bg=roma-university,fg=black}
\setbeamercolor*{part title}{bg=black,fg=black}
\setbeamercolor*{item}{fg=roma-university}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor*{alerted text}{fg=roma-university!90}

\setbeamercolor*{section in head/foot}{bg=roma-university, fg=white}
\setbeamercolor*{section in toc}{bg=white,fg=black}
\setbeamercolor*{section in toc shaded}{parent=section in toc}

% Block settings
\setbeamercolor*{block title}{use=structure,bg=roma-major,fg=white}
\setbeamercolor*{block title alerted}{use=structure,bg=roma-university,fg=white}
\setbeamercolor*{block title example}{use=example text,fg=white,bg=roma-department}

\setbeamercolor*{block body}{use=block title,bg=block title.bg!10!bg,fg=black}
\setbeamercolor*{block body alerted}{use=block title alerted,bg=block title alerted.bg!10!bg,fg=black}
\setbeamercolor*{block body example}{parent=normal text,use=block title example,bg=block title example.bg!10!bg}

